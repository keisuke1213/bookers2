        <div class="mb-3 ">
         <label for="user_name">Introduction</label><br>
         <%= f.text_area :introduction, placeholder: "自己紹介"  %>
        </div>
        <div class="mb-3 ">
          <%= f.submit "Update User" ,class:"btn bg-secondary text-light"%>
