<div class="container mt-3">
  <% if @book.errors.any? %>
      <%= @book.errors.count %> error prohibited this book from being saved:
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	
  		<%= form_with model: @book do |f| %>
  		 
        <div class="field mb-3">
          <label :book_title>Title</label><br>
          <%= f.text_field :title ,class:"form-control btn-block" %>
        </div>
      
        <div class="field mb-3">
          <label :book_opinion>Opinion</label><br>
          <%= f.text_area :body  ,class:"form-control btn-block" %>
        </div>
        
        <div class="mb-3 ">
          <%= f.submit "Update Book" ,class:"btn bg-success text-light" %>
        </div>
     <% end %>
     
     <%= link_to "Show", book_path(@book) %>
     |
     <%= link_to "Back", books_path %>
   </div>
  </div>
</div>


